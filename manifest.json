{
	"manifest_version": 2,

	"name": "Inoagent Message Remover",
    "description": "Сами вы иноагенты!",
	"version": "0.1.0",

	"content_scripts": [
		{
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_idle",
			"js": ["content.js"]
		}
	],

    "browser_action": {
        "default_icon": "icon.png"
    },

    "icons": { 
        "256": "icon.png"
    }
}
